#include <iostream>
using namespace std;

double calculateBill(double total, double &tax)
{
    tax = total * 0.08;    
    return total + tax;    
}

int main()
{
    double total = 1000;
    double tax;

    double grandTotal = calculateBill(total, tax);

    cout << "Tax: " << tax << endl;
    cout << "Grand Total: " << grandTotal << endl;

    return 0;
}

